    <ImageView
        android:id="@+id/ivBoldText"
        android:layout_width="25dp"
        android:layout_height="40dp"
        android:layout_marginTop="3dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout3"
        android:src="@drawable/ic_bold" />

    <ImageView
        android:id="@+id/ivItalicizedText"
        android:layout_width="35dp"
        android:layout_height="40dp"
        android:layout_marginTop="3dp"
        app:tint="@color/black"
        android:layout_marginBottom="4dp"
        app:layout_constraintBottom_toTopOf="@+id/ivRestoreFontProperties"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivBoldText"
        app:srcCompat="@drawable/ic_italic" />

    <ImageView
        android:id="@+id/ivRestoreFontProperties"
        android:layout_width="30dp"
        android:layout_height="40dp"
        android:layout_marginBottom="4dp"
        app:tint="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivItalicizedText"
        app:srcCompat="@drawable/ic_erase" />
