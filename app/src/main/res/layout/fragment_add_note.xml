<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.addNote.AddNoteFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/topViews"
        android:layout_width="match_parent"
        android:elevation="10dp"
        android:layout_height="wrap_content"
        android:background="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/ivBackAddNoteTodo"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginStart="8dp"
            app:tint="@color/white"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:src="@drawable/ic_back"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/edtTitleNoteTodo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:background="@color/transparent"
            android:ems="10"
            android:hint="@string/hintTitle"
            android:textColorHint="@color/gray"
            android:textColor="@color/white"
            android:inputType="text"
            android:padding="7dp"
            app:layout_constraintBottom_toBottomOf="@+id/ivBackAddNoteTodo"
            app:layout_constraintEnd_toStartOf="@+id/ivSaveNoteTodo"
            app:layout_constraintStart_toEndOf="@+id/ivBackAddNoteTodo"
            app:layout_constraintTop_toTopOf="@+id/ivBackAddNoteTodo" />


        <ImageView
            android:id="@+id/ivSaveNoteTodo"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginTop="8dp"
            app:tint="@color/white"
            android:layout_marginEnd="8dp"
            android:src="@drawable/ic_save"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <EditText
        android:id="@+id/edtDescNoteTodo"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:background="@color/transparent"
        android:ems="10"
        android:gravity="start"
        android:hint="@string/hintDesc"
        android:inputType="text"
        android:padding="7dp"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/topViews" />

</androidx.constraintlayout.widget.ConstraintLayout>